<section>
  <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
    <header class="text-center">
      <h2 class="text-xl font-bold text-gray-900 sm:text-3xl">Categorias</h2>

      <div class="mt-4 flex justify-center">
        <input
          type="search"
          placeholder="Buscar categoría..."
          class="w-full max-w-md rounded-md border-gray-200 bg-white p-3 text-sm text-gray-700 shadow-sm md:p-4 md:text-lg"
        />
        <button
          class="ml-2 rounded-md bg-orange-500 px-4 py-2 text-sm font-medium text-white transition hover:bg-orange-700 focus:outline-none focus:ring active:text-orange-400"
        >
          Buscar
        </button>
      </div>
    </header>

    <ul class="mt-8 grid gap-4 sm:grid-cols-4">
      <li>
        <a href="#" class="group block overflow-hidden">
          <img
            src="images/electricista.jpg"
            alt=""
            class="h-48 w-full object-cover transition duration-500 group-hover:scale-105"
          />

          <div class="relative bg-white pt-3">
            <h3
              class="text-xs text-gray-700 group-hover:underline group-hover:underline-offset-4"
            >
              Electricista
            </h3>
          </div>
        </a>
      </li>

      <li>
        <a href="#" class="group block overflow-hidden">
          <img
            src="images/diseñador.jpg"
            alt=""
            class="h-48 w-full object-cover transition duration-500 group-hover:scale-105"
          />

          <div class="relative bg-white pt-3">
            <h3
              class="text-xs text-gray-700 group-hover:underline group-hover:underline-offset-4"
            >
              Diseñador
            </h3>
          </div>
        </a>
      </li>

      <li>
        <a href="#" class="group block overflow-hidden">
          <img
            src="images/jardinero.jpg"
            alt=""
            class="h-48 w-full object-cover transition duration-500 group-hover:scale-105"
          />

          <div class="relative bg-white pt-3">
            <h3
              class="text-xs text-gray-700 group-hover:underline group-hover:underline-offset-4"
            >
              Jardinero
            </h3>
          </div>
        </a>
      </li>

      <li>
        <a href="#" class="group block overflow-hidden">
          <img
            src="images/mas.jpg"
            alt=""
            class="h-48 w-full object-cover transition duration-500 group-hover:scale-105"
          />

          <div class="relative bg-white pt-3">
            <h3
              class="text-xs text-gray-700 group-hover:underline group-hover:underline-offset-4"
            >
              Más
            </h3>
          </div>
        </a>
      </li>
    </ul>
  </div>
</section>

<section>
  <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
    <header>
      <h2 class="text-xl font-bold text-gray-900 sm:text-3xl">
        Servicios destacados
      </h2>
    </header>

    <% if (approvedServices.length > 0) { %>
    <ul class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      <% approvedServices.forEach(service => { %>
      <a
        href="/services/<%= service.category %>/<%= service.id %>"
        class="block rounded-lg p-4 shadow-sm shadow-indigo-100"
      >
        <img
          alt=""
          src="<%= service.bannerImage %>"
          class="h-56 w-full rounded-md object-cover"
        />

        <div class="mt-2">
          <dl>
            <div>
              <dt class="sr-only">Precio por hora</dt>

              <dd class="text-sm text-gray-500">
                Gs. <%= service.price %>/hora
              </dd>
            </div>

            <div>
              <dt class="sr-only">Título del servicio</dt>

              <dd class="font-medium"><%= service.title %></dd>
            </div>
          </dl>

          <div class="mt-6 flex items-center gap-8 text-xs">
            <div class="sm:inline-flex sm:shrink-0 sm:items-center sm:gap-2">
              <svg
                class="size-4 text-blue-500"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"
                />
              </svg>

              <div class="mt-1.5 sm:mt-0">
                <p class="text-gray-500">Duración</p>

                <p class="font-medium"><%= service.duration %></p>
              </div>
            </div>

            <div class="sm:inline-flex sm:shrink-0 sm:items-center sm:gap-2">
              <svg
                class="size-4 text-blue-500"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                />
              </svg>

              <div class="mt-1.5 sm:mt-0">
                <p class="text-gray-500">Ubicación</p>

                <p class="font-medium"><%= service.location %></p>
              </div>
            </div>
          </div>
        </div>
      </a>
      <% }); %>
    </ul>
    <% } else { %>
    <p>No approved services available</p>
    <% } %>
  </div>
</section>
